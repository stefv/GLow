<Window x:Class="GLow_Screensaver.SettingsWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="GLow Screensaver" ShowInTaskbar="True"
    Focusable="true" Icon="/GLow Screensaver;component/Images/icon-final.png" Background="{x:Null}"
        AllowsTransparency="True" WindowStyle="None">

    <Grid x:Name="grid" Background="{x:Null}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="White" />
        <Grid x:Name="content" Grid.Row="1" Background="{x:Null}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="22*"/>
                <ColumnDefinition Width="41*"/>
            </Grid.ColumnDefinitions>
            <Border Background="#7F808080" Grid.Column="1" Margin="0,0,0,0.5">
            </Border>
            <Border Background="White" Grid.Column="0" Margin="0,0,0,0.5" />
        </Grid>
        <Border BorderBrush="Black" BorderThickness="1" />
    </Grid>
</Window>